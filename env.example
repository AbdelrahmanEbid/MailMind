# MailMind Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Required API Keys
# =============================================================================

# Google Gemini API Key (Required)
# Get from: https://ai.google.dev/
GOOGLE_API_KEY=your_gemini_api_key_here

# LangSmith API Key (Required for monitoring)
# Get from: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here

# =============================================================================
# Email Provider Configuration
# =============================================================================

# Primary email provider (gmail, outlook, custom)
EMAIL_PROVIDER=gmail

# Gmail API Configuration
# Get from: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:8080/callback

# Microsoft Outlook Configuration (if using outlook)
# Get from: https://portal.azure.com/
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_TENANT_ID=your_outlook_tenant_id

# =============================================================================
# LangChain/LangSmith Configuration
# =============================================================================

# LangChain Project Name
LANGCHAIN_PROJECT=mailmind

# LangChain Tracing (true/false)
LANGCHAIN_TRACING_V2=true

# LangChain API Endpoint (optional)
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

